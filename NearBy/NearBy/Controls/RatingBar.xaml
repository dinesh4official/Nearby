<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NearBy.Controls.RatingBar">
    <ContentView.Content>
        <StackLayout Orientation="Horizontal" Padding="0" Spacing="0">
            <Label x:Name="FAverageRating" Margin="0,0,2,0" FontSize="12" TextColor="{StaticResource RatingColor}"
                   VerticalOptions="Center" />
            <Image x:Name="FFirstStar" HeightRequest="20" WidthRequest="20" />
            <Image x:Name="FSecondStar" HeightRequest="20" WidthRequest="20" />
            <Image x:Name="FThirdStar" HeightRequest="20" WidthRequest="20" />
            <Image x:Name="FFourthStar" HeightRequest="20" WidthRequest="20" />
            <Image x:Name="FFifthStar" HeightRequest="20" WidthRequest="20" />
            <Label x:Name="FNumberOfRatings" Margin="2,0,0,0" FontSize="12" TextColor="DarkGray"
                   VerticalOptions="Center" />
        </StackLayout>
    </ContentView.Content>
</ContentView>